@typeparam TItem

<table class="table table-striped">

    <thead>
        <tr>
            @HeaderTemplate
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @RowTemplate(item)                
            </tr>
        }
    </tbody>

    <tfoot>
    </tfoot>


</table>


@code {

    [Parameter]
    public IEnumerable<TItem> Items { get; set; }

    [Parameter]
    public RenderFragment HeaderTemplate { get; set;  }

    [Parameter]
    public RenderFragment<TItem> RowTemplate { get; set; }

}
